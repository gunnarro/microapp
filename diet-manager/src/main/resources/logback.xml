<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
		<resetJUL>true</resetJUL>
	</contextListener>
	<!-- To enable JMX Management -->
	<jmxConfigurator />
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%date{ISO8601}] [%-5level] [%logger{0}.%method:%L] %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="debugfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${OPENSHIFT_LOG_DIR}/dietmanager-service.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${OPENSHIFT_LOG_DIR}/dietmanager-service.log.%d{yyyy-MM-dd}
			</fileNamePattern>
			<maxHistory>2</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>[%date{ISO8601}] [%-5level] [%logger.%method:%L] %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="httpSessionfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${OPENSHIFT_LOG_DIR}/dietmanager-http-session.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${OPENSHIFT_LOG_DIR}/dietmanager-http-session.log.%d{yyyy-MM-dd}
			</fileNamePattern>
			<maxHistory>2</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>[%date{ISO8601}] [%-5level] [%logger{0}.%method:%L] %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="com.gunnarro.dietmanager" level="debug" additivity="false">
		<appender-ref ref="debugfile" />
	</logger>
	
	<logger name="com.gunnarro.dietmanager.repository.impl.DietManagerRowMapper" level="error" additivity="false">
		<appender-ref ref="debugfile" />
	</logger>

	<logger name="org.springframework.web.servlet.mvc" level="trace" >
		<appender-ref ref="debugfile" />
	</logger>
		
	<logger name="com.gunnarro.dietmanager.listener.HttpSessionListener" level="info" additivity="false">
		<appender-ref ref="httpSessionfile" />
	</logger>

	<logger name="org.springframework" level="trace" additivity="false">
		<appender-ref ref="debugfile" />
	</logger>
	
	<logger name="org.springframework.security" level="trace" additivity="false">
		<appender-ref ref="debugfile" />
	</logger>
	
	<logger name="org.springframework.social" level="trace" additivity="false">
		<appender-ref ref="debugfile" />
	</logger>
	
	<logger name="org.springframework.security.web.authentication" level="trace" additivity="false">
		<appender-ref ref="debugfile" />
	</logger>
	
	<!-- for logging parameter values -->
	<logger name="org.springframework.jdbc.core.StatementCreatorUtils" level="error" additivity="false" />

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="debugfile" />
	</root>
</configuration>